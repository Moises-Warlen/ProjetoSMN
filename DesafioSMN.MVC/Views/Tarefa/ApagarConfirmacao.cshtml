@model TarefaModel
@{
    ViewData["Title"] = "Confirmação apagar Tarefa";
}

<div class="text-center">

    <h3>Realmente deseja  apagar a tarefa (@Model.Descricao)?</h3>

</div>

<a class="btn btn-success btn-block" role="button" asp-controller="Tarefa" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block " role="button" asp-controller="Tarefa" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar Exclusão</a>