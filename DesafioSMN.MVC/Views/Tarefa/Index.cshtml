@model IEnumerable<DesafioSMN.MVC.Models.TarefaModel>
@{
    ViewData["Title"] = "Listagem de Tarefas";
}

<div class="text-center">
    <div class="d-grig gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success" role="button" asp-controller="Tarefa" asp-action="Criar">Adicionar Nova Tarefa </a>
    </div>
    <br />
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <h1>Listagem de Tarefas</h1>

    <table class="table table-hover" id="table-tarefas">
        <thead>
            <tr>
                <th>#</th>
                <th>Funcionário</th>
                <th>Descrição</th>
                <th>Data de Atribuição</th>
                <th>Data de Conclusão</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var tarefa in Model/*TarefaModel tarefa in Model*/)
                {

                  <tr>
                        <td>@tarefa.Id</td>
                         <td>@(tarefa.Funcionario != null ? tarefa.Funcionario.Nome : "-")</td>
                         <td>@tarefa.Descricao</td>
                         <td>@tarefa.DataAtribuicao.ToShortDateString()</td>
                         <td>@(tarefa.DataConclusao.HasValue ? tarefa.DataConclusao.Value.ToShortDateString() : "-")</td>
                         <td>
                              <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-success" asp-route-id="@tarefa.Id" asp-controller="Tarefa" asp-action="Editar">Editar</a>
                                        &nbsp
                                    <a class="btn btn-danger btn-block " asp-route-id="@tarefa.Id" role="button" asp-controller="Tarefa" asp-action="ApagarConfirmacao">Apagar</a>
                              </div>
                         </td>
                  </tr>

                }
            }
        </tbody>
    </table>
</div>
