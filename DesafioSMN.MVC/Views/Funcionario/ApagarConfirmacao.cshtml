
@using DesafioSMN.Dominio.Model

@model FuncionarioModel
@{
    ViewData["Title"] = "Confirmação apagar Funcionario";
}

<div class="text-center">

    <h3>Realmente deseja  apagar a Funcionario (@Model.Nome)?</h3>

</div>

<a class="btn btn-success btn-block"  asp-action="Index" asp-controller="Funcionario" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block "asp-action="Apagar"  asp-controller="Funcionario" asp-route-id="@Model.Id"role="button" >Confirmar Exclusão</a>